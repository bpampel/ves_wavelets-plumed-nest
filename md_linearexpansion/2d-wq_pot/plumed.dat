UNITS NATURAL
p: POSITION ATOM=1
ene: ENERGY

td_uni: TD_UNIFORM

# Basissets
BF_WAVELETS ...
  ORDER=8
  MINIMUM=-3
  MAXIMUM=+3
  FUNCTION_LENGTH=6
  TYPE=SYMLETS
  TAILS_THRESHOLD=0.01
  LABEL=bf1
... BF_WAVELETS

BF_WAVELETS ...
  ORDER=8
  MINIMUM=-3
  MAXIMUM=+3
  FUNCTION_LENGTH=6
  TYPE=SYMLETS
  TAILS_THRESHOLD=0.01
  LABEL=bf2
... BF_WAVELETS


# expansion for x and y direction
VES_LINEAR_EXPANSION ...
 ARG=p.x,p.y
 BASIS_FUNCTIONS=bf1,bf2
 LABEL=b1
 TEMP=1
 GRID_BINS=300,300
 OPTIMIZATION_THRESHOLD=0.000001
 TARGET_DISTRIBUTION=td_uni
... VES_LINEAR_EXPANSION

OPT_AVERAGED_SGD ...
  BIAS=b1
  STRIDE=500
  LABEL=o1
  STEPSIZE=0.5
  FES_OUTPUT=100
  BIAS_OUTPUT=500
  COEFFS_OUTPUT=10
... OPT_AVERAGED_SGD


PRINT ARG=* FILE=colvar.data FMT=%8.4f
