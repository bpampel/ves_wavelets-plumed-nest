UNITS NATURAL
p: POSITION ATOM=1
ene: ENERGY

td_uni: TD_UNIFORM

# Basisset
BF_LEGENDRE ...
  ORDER=21
  MINIMUM=-3.0
  MAXIMUM=+3.0
  LABEL=bf1
... BF_LEGENDRE

VES_OUTPUT_BASISFUNCTIONS ...
 BASIS_FUNCTIONS=bf1
 GRID_BINS=300
... VES_OUTPUT_BASISFUNCTIONS

VES_LINEAR_EXPANSION ...
 ARG=p.x
 BASIS_FUNCTIONS=bf1
 LABEL=b1
 TEMP=0.5
 GRID_BINS=300
 TARGET_DISTRIBUTION=td_uni
... VES_LINEAR_EXPANSION

OPT_AVERAGED_SGD ...
  BIAS=b1
  STRIDE=500
  LABEL=o1
  STEPSIZE=0.1
  FES_OUTPUT=100
  BIAS_OUTPUT=500
  COEFFS_OUTPUT=10
... OPT_AVERAGED_SGD

PRINT ARG=* FILE=colvar.data STRIDE=100
