UNITS NATURAL
p: POSITION ATOM=1
ene: ENERGY

td_uni: TD_UNIFORM

# Basissets
BF_CUBIC_B_SPLINES ...
  ORDER=18
  MINIMUM=-3
  MAXIMUM=+3
  LABEL=bf1
... BF_CUBIC_B_SPLINES

# expansion for x
VES_LINEAR_EXPANSION ...
 ARG=p.x
 BASIS_FUNCTIONS=bf1
 LABEL=b1
 TEMP=1
 GRID_BINS=300
 TARGET_DISTRIBUTION=td_uni
... VES_LINEAR_EXPANSION

OPT_ADAM ...
  BIAS=b1
  STRIDE=500
  LABEL=o1
  STEPSIZE=0.005
  FES_OUTPUT=100
  BIAS_OUTPUT=500
  COEFFS_OUTPUT=10
... OPT_ADAM

PRINT ARG=* FILE=colvar.data FMT=%8.4f STRIDE=100
